<!DOCTYPE html>
<html>
  <head>
  <%= stylesheet_link_tag 'application' %>
    <title>Askme</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head> 

  <body>
    <div class = "wrapper">
      <div class = "navbar">
        <p class = "title-sm text-bold"> <%= link_to "Ask me!", root_path %></p>
      <div>
          <% if current_user.present? %>
          <%= "@#{current_user.nickname}" %>
          <%= button_to 'Выйти', session_path, method: :delete, class: "button button-yelow mt-sm"%>
        <% else %>
          <%= link_to 'Регистрация', new_user_path, class: "button button-yelow mr-sm" %>
          <%= link_to 'Вход', new_session_path, class: "button button-yelow mr-sm" %>
        <% end %>
      </div>
    </div>
    
      <% if flash[:notice].present? %>
        <p class= "mt mb message message-notice" > <%= flash[:notice] %></p>
      <%elsif flash[:alert].present? %>
        <p class= "mt mb message message-alert" > <%= flash[:alert] %></p>
      <% end %>

      <%= yield %>
    </div> 
  </body>
</html>
